<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/black">

    <!--Zendo Logo -->
    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo"
        tools:ignore="ContentDescription" />
    <!-- Create Account Text -->
    <TextView
        android:layout_width="202dp"
        android:layout_height="35dp"
        android:layout_marginTop="235dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textSize="28dp"
        android:textColor="@color/white"
        />

    <!-- First Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/first_name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:hint="First Name"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:inputType="text"
            android:maxLines="1"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Last Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/last_name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:hint="Last Name"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:inputType="text"
            android:maxLines="1"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginTop="410dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:hint="Email"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Gender -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp">
        <RadioButton
            android:id="@+id/radioM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Male"
            />
        <RadioButton
            android:id="@+id/radioF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Female"
            />
        <RadioButton
            android:id="@+id/radioO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Others"
            />
    </RadioGroup>

    <!-- Mobile Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mobile_number"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginTop="493dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:hint="Mobile Number"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:inputType="number"
            android:maxLength="10"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Create Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_password"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginTop="553dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:hint="Create Password"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:maxLines="1"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Sign Up -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_up_button"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/white"
        android:layout_centerHorizontal="true"
        app:cornerRadius="10dp"
        android:focusable="true"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:layout_marginTop="615dp"
        android:clickable="true"
        />

    <!-- OR -->
    <ImageView
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:layout_marginStart="37dp"
        android:contentDescription="line1"
        android:src="@drawable/line"
        />

    <TextView
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="OR"
        />

    <ImageView
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:layout_marginStart="248dp"
        android:contentDescription="line2"
        android:src="@drawable/line"
        tools:ignore="HardcodedText" />

    <!-- continue with Google Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/google_button"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="700dp"
        app:cornerRadius="10dp"
        android:layout_centerHorizontal="true"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:backgroundTint="@color/black"
        android:text="Continue with Google"
        />

    <!-- Already have an account? Login -->
    <TextView
        android:id="@+id/login"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="770dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Already have an account? Login"
        />

</RelativeLayout>